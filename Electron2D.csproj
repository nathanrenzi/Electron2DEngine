<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\Built-In\Fonts\Roboto-Regular.ttf" />
    <None Remove="Resources\Built-In\Shaders\UserInterface\CaretBlink.glsl" />
    <None Remove="Resources\Built-In\Textures\BlankNormal.png" />
    <None Remove="Resources\Built-In\Textures\BlankTexture.png" />
    <None Remove="Resources\Built-In\Textures\Electron2DSplashscreen.png" />
    <None Remove="Resources\Built-In\Shaders\PostProcessing\ChromaticAberration.glsl" />
    <None Remove="Resources\Built-In\Shaders\PostProcessing\ColorGrading.glsl" />
    <None Remove="Resources\Built-In\Shaders\PostProcessing\DefaultPostProcessing.glsl" />
    <None Remove="Resources\Built-In\Shaders\PostProcessing\GaussianBlur.glsl" />
    <None Remove="Resources\Built-In\Shaders\PostProcessing\Inverted.glsl" />
    <None Remove="Resources\Built-In\Shaders\PostProcessing\LensDistortion.glsl" />
    <None Remove="Resources\Built-In\Shaders\PostProcessing\Vignette.glsl" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\Built-In\Fonts\Roboto-Regular.ttf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\Built-In\Shaders\PostProcessing\ChromaticAberration.glsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\Built-In\Shaders\PostProcessing\ColorGrading.glsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\Built-In\Shaders\PostProcessing\DefaultPostProcessing.glsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\Built-In\Shaders\PostProcessing\GaussianBlur.glsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\Built-In\Shaders\PostProcessing\Inverted.glsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\Built-In\Audio\Electron2DRiff.mp3">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="DefaultSettings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\Built-In\Shaders\UserInterface\CaretBlink.glsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\Built-In\Textures\BlankNormal.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\Built-In\Textures\BlankTexture.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\Built-In\Textures\Electron2DSplashscreen.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\Built-In\Shaders\DefaultLit.glsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\Built-In\Shaders\DefaultText.glsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\Built-In\Shaders\DefaultInterface.glsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\Built-In\Shaders\DefaultTextureArray.glsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\Built-In\Shaders\DefaultTexturedVertex.glsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\Built-In\Shaders\DefaultVertex.glsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\Built-In\Shaders\DefaultTexture.glsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\Built-In\Shaders\PostProcessing\LensDistortion.glsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\Built-In\Shaders\PostProcessing\Vignette.glsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\Built-In\Textures\Circle.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Box2D.NetStandard" Version="2.4.7-alpha" />
    <PackageReference Include="DotnetNoise" Version="1.0.0" />
    <PackageReference Include="FreeTypeSharp" Version="1.1.3" />
    <PackageReference Include="NAudio" Version="2.2.1" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="System.Drawing.Common" Version="5.0.0" />
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="echo %25date%25 %25time%25 &gt; &quot;$(ProjectDir)\Build\BuildDate.txt&quot;" />
  </Target>

</Project>
